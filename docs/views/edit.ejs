<%- include('./partials/head.ejs')%>
    <%- include('./partials/header.ejs')%>

        <div class="caja-cambio">
            <form action="/admin/edit" method="post">
                <h2 class="titulo-edit">Edita el valor</h2>
                <div class="caja-input">
                    <select class="origen " name="origen" id="origen">
                        <option value="0">Tipo de cambio</option>
                        <% mediosdepago.forEach(medio=>{%>
                            <option id="primero" value="<%-medio.id%>">
                                <%-medio.nombre%>
                            </option>
                            <%}) %>
                    </select>
                    <span class="text-danger" id="errorOrigen"></span>
                </div>
                <div class="caja-input">
                    <select name="destino" id="destino">
                        <option value="0">Cotizar a </option>
                        <% mediosdepago.forEach(medio=>{%>
                            <option value="<%-medio.id%>">
                                <%-medio.nombre%>
                            </option>
                            <%}) %>
                    </select>
                    <span class="text-danger" id="errorDestino" ></span>
                </div>
                <div>
                    <span class="text-danger" id="errorIgualdad"></span>
                </div>
                <div class="caja-input">
                    <label id="coeficiente" for="coeficiente" class="valor">Valor: </label>
                    <input class="coeficiente" id="coeficiente" type="number" step=".01" placeholder="$ 0.00">
                    <span class="text-danger" id="errorCoeficiente"></span>
                </div>
                <div class="caja-input">
                    <a href="/"><button type="button" class="btn btn-danger">Cancelar</button></a>
                    <button id="actualizar" type="button" class="btn btn-success">Actualizar</button>
                </div>
                <span class="text-danger" id="msgError"></span>
            </form>
        </div>






        <%- include('./partials/footer.ejs')%>